---
import Header from "@/common/Header.astro";
import Loader from "@/common/Loader.astro";
import AboutUs from "@/home/AboutUs.astro";
import Gallery from "@/home/Gallery.astro";
import Hero from "@/home/Hero.astro";
import ProductsAndSolutions from "@/home/ProductsAndSolutions.astro";
import Statistics from "@/home/Statistics.astro";
import VideoSection from "@/home/VideoSection.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Reypamin | Inicio">
  <Loader />
  <Header currentPage="inicio" />
  <Hero />
  <ProductsAndSolutions />
  <AboutUs />
  <Statistics />
  <Gallery />
  <VideoSection />
</BaseLayout>
<script>
  import {
    addFadeInLettersAnimation,
    addAnimation,
  } from "@/functions/animation";
  addAnimation(".fade-up");
  addAnimation(".fade-left", "animate__fadeInLeft");
  addAnimation(".fade-right", "animate__fadeInRight");
  addFadeInLettersAnimation(".fade-in-letters");
</script>
