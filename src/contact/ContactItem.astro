---
interface Props {
    title: string;
    items: string[];
}
const { title, items } = Astro.props;
---

<div
    class="flex flex-col p-6 gap-2 w-full bg-primary-blue text-white items-center justify-start text-center max-w-[300px] cursor-pointer hover-effect-1"
>
    <slot />
    <h4 class="font-bold italic text-xl">{title}:</h4>
    {
        items.map((item) => (
            <p>{item}</p>
        ))
    }
</div>
