---
import logo from "@images/logo.svg";
import "../../public/styles/animations.css";
import PrimaryButton from "./PrimaryButton.astro";
---

<header
  class="flex w-full absolute z-50 py-5 backdrop-blur-sm"
  x-data="{ open: false }"
>
  <div class="flex items-center container px-5 sm:px-0 mx-auto justify-between">
    <a href="/">
      <img src={logo.src} alt="Reypamin Logo" class="h-[70px] fade-up" />
    </a>
    <div class="hidden lg:flex text-white fade-up">
      <ul class="flex gap-10 items-center">
        <li
          class="flex items-center font-semibold hover-effect-3 drop-shadow-sm"
        >
          <a href="/">Inicio</a>
        </li>
        <li
          class="flex items-center font-semibold hover-effect-3 drop-shadow-sm"
        >
          <a href="/soluciones">Soluciones</a>
        </li>
        <li
          class="flex items-center font-semibold hover-effect-3 drop-shadow-sm"
        >
          <a href="/productos">Productos</a>
        </li>
        <li
          class="flex items-center font-semibold hover-effect-3 drop-shadow-sm"
        >
          <a href="/contacto">Contacto</a>
        </li>
        <li class="flex items-center drop-shadow-md">
          <PrimaryButton title="Â¡HABLEMOS YA!" />
        </li>
      </ul>
    </div>
    <button
      @click="open = !open"
      type="button"
      class="inline-flex items-center p-2 ml-1 text-sm rounded-lg lg:hidden focus:outline-none focus:ring-2 text-white hover:bg-primary-blue focus:ring-gray-600"
      aria-controls="mobile-menu-2"
      aria-expanded="false"
    >
      <span class="sr-only">Open main menu</span>
      <svg
        class="w-6 h-6"
        fill="currentColor"
        viewBox="0 0 20 20"
        xmlns="http://www.w3.org/2000/svg"
        ><path
          fill-rule="evenodd"
          d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z"
          clip-rule="evenodd"></path></svg
      >
      <svg
        class="hidden w-6 h-6"
        fill="currentColor"
        viewBox="0 0 20 20"
        xmlns="http://www.w3.org/2000/svg"
        ><path
          fill-rule="evenodd"
          d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
          clip-rule="evenodd"></path></svg
      >
    </button>
  </div>
  <div
    x-cloak
    x-show="open"
    style="animation-duration: .4s;"
    class="absolute top-0 mt-[110px] z-50 justify-between items-center w-full bg-gray-900 bg-opacity-60  animate__animated animate__fadeInDown"
  >
    <ul class="flex flex-col font-medium">
      <li
        class="hover:bg-primary-red transition-all ease-in-out duration-150 cursor-pointer border-b border-white"
      >
        <a
          href="/"
          class="block py-2 pr-4 pl-3 rounded bg-primary-700 text-white text-center italic font-bold"
          aria-current="page">Inicio</a
        >
      </li>
      <li
        class="hover:bg-primary-red transition-all ease-in-out duration-150 cursor-pointer border-b border-white"
      >
        <a
          href="/soluciones"
          class="block py-2 pr-4 pl-3 rounded bg-primary-700 text-white text-center italic font-bold"
          aria-current="page">Soluciones</a
        >
      </li>
      <li
        class="hover:bg-primary-red transition-all ease-in-out duration-150 cursor-pointer border-b border-white"
      >
        <a
          href="/productos"
          class="block py-2 pr-4 pl-3 rounded bg-primary-700 text-white text-center italic font-bold"
          aria-current="page">Productos</a
        >
      </li><li
        class="hover:bg-primary-red transition-all ease-in-out duration-150 cursor-pointer border-b border-white"
      >
        <a
          href="/contacto"
          class="block py-2 pr-4 pl-3 rounded bg-primary-700 text-white text-center italic font-bold"
          aria-current="page">Contacto</a
        >
      </li>
    </ul>
  </div>
  <style>
    .active {
      transform: translateX(-50%) scale(1);
    }
  </style>
</header>
