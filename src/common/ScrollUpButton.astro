<div class="w-full relative">
  <div
    id="scroll-up-btn"
    class="flex opacity-0 items-center justify-center p-4 shadow-md rounded-full bg-primary-red fixed z-50 bottom-10 right-10 cursor-pointer active:scale-90 transition-all ease-in-out duration-300 animate__animated"
    style="animation-duration: .3s;"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="size-8 rotate-90"
      viewBox="0 0 24 24"
      ><path
        fill="#ffffff"
        d="m9.55 12l7.35 7.35q.375.375.363.875t-.388.875t-.875.375t-.875-.375l-7.7-7.675q-.3-.3-.45-.675t-.15-.75t.15-.75t.45-.675l7.7-7.7q.375-.375.888-.363t.887.388t.375.875t-.375.875z"
      ></path></svg
    >
  </div>
</div>
<script>
  const $btn = document.querySelector("#scroll-up-btn")!;
  $btn?.addEventListener("click", () => {
    window.scrollTo({
      top: 0,
      behavior: "smooth",
    });
  });

  const toggleScrollButton = () => {
    if (window.scrollY > 0) {
      $btn.classList.add("animate__fadeIn");
      $btn.classList.remove("animate__fadeOut", "pointer-events-none");
    } else {
      $btn.classList.add("animate__fadeOut", "pointer-events-none");
      $btn.classList.remove("animate__fadeIn");
    }
  };
  window.addEventListener("scroll", toggleScrollButton);
</script>
